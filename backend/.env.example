# Server Configuration
HOST="127.0.0.1"
PORT=8000

# Auth Configuration
APP_TITLE="Stellantis RFQ Agent"
APP_USER="admin"
APP_PASSWORD="admin"
APP_ROLE="Admin"
APP_NAME="RFQ Agent"

# LLM Configuration (Options: groq, openai, anthropic, google)
LLM_PROVIDER="groq"
LLM_API_KEY="" 
LLM_MODEL_NAME="llama3-70b-8192"
LLM_TEMPERATURE=0.4
HUGGINGFACE_TOKEN="" # Required for JinaCLIP (Get from hf.co/settings/tokens)

# Database (PostgreSQL + pgvector)
POSTGRES_HOST="localhost"
POSTGRES_PORT="5432"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="password"
POSTGRES_DB="rfq_agent"

# App Settings
DATA_DIR="data"
EXPORT_DIR="exports"
RETRIEVER_TOP_K=5
EMBEDDING_MODEL_NAME="sentence-transformers/all-MiniLM-L6-v2"
IMAGE_MODEL_NAME="jinaai/jina-clip-v1"  # Options: jinaai/jina-clip-v1, jinaai/jina-clip-v2
IMAGE_MODEL_FALLBACK="openai/clip-vit-base-patch32"

# CORS
CORS_ORIGINS=["http://localhost:5173", "http://127.0.0.1:5173"]
